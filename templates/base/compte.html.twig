{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Mon compte{% endblock %}

{% block body %}

<style>
.medium{
    font-size: medium;
}
.large {
    font-size:large;
}
.small{
    font-size : small;
}
.Déconnexion{
    text-decoration: underline;
        font-size: medium;
        text-align : center;
}

</style>



<div class="container">
  <div class="row">
    <div class="col-md-6 card ">
        <h1  class="text-center small"> Acceuil / Compte</h1>
        <h1 class=" text-center large"> Mon compte </h1>
        <div class="card">
  <div class="card-body">
    <div class="row">
      
      <div class="col-md-8">

        <p class="card-title d-flex">NOM :  {{app.user.nom}}</p>

        <p class="card-title d-flex">PRENOM :  {{app.user.nom}}</p>

        <p class="card-text d-flex">E-MAIL :  {{app.user.email}}</p>
      
        <p class="card-text d-flex">TELEPHONE :  {{app.user.telephone}}</p>
        <a class="button-18" href="{{path('app_logout')}}">Déconnexion</a>
        <a class="button-18" href="{{path('modifAccount')}}">Modifier mon profil</a>



      </div>
    </div>
  </div>
</div>

    </div>
    <div class="col-md-6 card ">
        <div class="float-right">
          <h1 href="" class="text-center medium "> MES POINTS DE FIDELITÉS</h1>

          {% if app.user.pointFidelite == null %}
          <p class="text-center m-5">0 point</p>
          {% elseif app.user.pointFidelite == 1 %}
          <p class="text-center m-5">{{app.user.pointFidelite}} Point</p>
          {% else %}
          <p class="text-center m-5">{{app.user.pointFidelite}} Points</p>
          {% endif %}

        </div>
    </div>
  </div>
</div>


{% endblock %}
